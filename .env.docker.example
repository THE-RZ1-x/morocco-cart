# Docker Compose Environment Variables
# Copy this to .env in the root directory for Docker deployment

# Database Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=securePassword123
MONGO_DB=maroc-cart
MONGO_URI=mongodb://mongodb:27017/maroc-cart

# Server Configuration
SERVER_PORT=5001
NODE_ENV=production
JWT_SECRET=your-super-secret-jwt-key-for-docker

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:80

# Client Configuration
CLIENT_PORT=3002
REACT_APP_API_URL=http://localhost:5001
REACT_APP_SITE_NAME=Maroc Cart

# Nginx Configuration (if using)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Optional: External Services
REACT_APP_WHATSAPP_NUMBER=+212600000000
STRIPE_SECRET_KEY=sk_test_your_stripe_key
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key