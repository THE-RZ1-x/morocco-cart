# Maroc-Cart Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGO_URI_DEV=mongodb://localhost:27017/maroc-cart-dev
MONGO_URI_STAGING=mongodb://your-staging-db-uri
MONGO_URI_PRODUCTION=mongodb://your-production-db-uri

# Server Configuration
NODE_ENV=development
PORT=5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cloudinary (for image storage in production)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Stripe (for payments)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Redis (for caching in production)
REDIS_URL=redis://localhost:6379

# Frontend URLs
CLIENT_URL=http://localhost:3000
CLIENT_URL_PRODUCTION=https://maroc-cart.com

# Admin Configuration
ADMIN_EMAIL=admin@maroc-cart.com
ADMIN_PASSWORD=secure-admin-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# SEO Configuration
SITE_NAME=Maroc-Cart
SITE_URL=https://maroc-cart.com
SITE_DESCRIPTION=أفضل المنتجات المغربية الأصلية
