# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/maroc-cart
MONGO_URI_MARKET=mongodb://localhost:27017/maroc-cart-market
MONGO_URI_USERS=mongodb://localhost:27017/maroc-cart-users

# Server Configuration
PORT=5001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=30d

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,https://your-netlify-site.netlify.app

# Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5000000

# Payment Configuration (if using payment providers)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Email Configuration (if using email services)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Admin Configuration
ADMIN_EMAIL=admin@maroc-cart.com
ADMIN_PASSWORD=admin123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600